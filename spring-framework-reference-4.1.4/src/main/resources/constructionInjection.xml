<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="exampleBean" class="construction.injection.dao.ExampleBean">
        <constructor-arg name="beanOne" ref="anotherBean" />
        <constructor-arg name="beanTwo" ref="yetAnotherBean"/>
        <constructor-arg name="integerProperty" value="100"/>
    </bean>
    <bean id="anotherBean" class="construction.injection.dao.AnotherBean">
        <constructor-arg value="this is another bean"/>
    </bean>
    <bean id="yetAnotherBean" class="construction.injection.dao.YetAnotherBean">
        <constructor-arg value="this is yet another bean"/>
    </bean>
</beans>